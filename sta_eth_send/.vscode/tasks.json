{
	"version": "2.0.0",
	"inputs": [
        {
            "type": "promptString",
            "id": "passwd",
            "description": "password",
            "default": ""
        }
    ],
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: arm-none-linux-gnueabihf-gcc build program",
			"command": "${config:toolchain}gcc",
			"args": [
				"-fdiagnostics-color=always",
				"--sysroot=${config:sysroot_path}",
				"-g",
				"${fileDirname}/utils.c",
				"${fileDirname}/fft.c",
				"${fileDirname}/send_packet.c",
				"-o",
				"${fileDirname}/${config:program_name}",
				"-I${config:sysroot_path}/usr/include",
				"-I${config:sysroot_path}/usr/include/json-c",
				"-I${workspaceFolder}",
				"-L${config:sysroot_path}/usr/lib",
				"-lrabbitmq",
				"-ljson-c",
				"-lrt"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"clear": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "Remote Execute",
			"detail": "Executes active file",
			"type": "shell",
			"command": "sshpass -p ${input:passwd} ssh -t -t ${config:remote.user}@${config:remote.hostname} \"cd code-sync/${workspaceFolderBasename} && gdbserver :${config:remote.port} ./${fileBasenameNoExtension} ${config:rabbit.hostname} ${config:rabbit.port} ${config:rabbit.queue_name}\"",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Kill GDBserver",
				"Synchronize Code"
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Kill GDBserver",
			"type": "shell",
			"command": "sshpass -p ${input:passwd} ssh ${config:remote.user}@${config:remote.hostname} killall gdbserver || true",
			"presentation": {
				"echo": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Synchronize Code",
			"type": "shell",
			"command": "sshpass -p ${input:passwd} rsync -axv --exclude=\".vscode/\" --max-size=5MB \"${workspaceFolder}\" ${config:remote.user}@${config:remote.hostname}:code-sync/",
			"presentation": {
				"echo": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}